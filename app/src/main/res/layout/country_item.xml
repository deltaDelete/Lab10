<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="ru.deltadelete.lab10.database.entities.Country" />
        <variable
            name="item"
            type="ru.deltadelete.lab10.database.entities.Country" />
    </data>

    <LinearLayout
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:clickable="true"
            app:cardCornerRadius="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:maxLines="3"
                    android:text="@{item.name, default=Placeholder}"
                    android:textSize="24sp" />

                <ImageView
                    imageUrl="@{item.flagUrl}"
                    error="@drawable/ru"
                    android:contentDescription="@string/country"
                    android:src="@drawable/ru"
                    android:layout_gravity="end"
                    android:layout_weight="1.5"
                    android:layout_height="60dp"
                    android:layout_width="0dp"
                    android:scaleType="fitCenter"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>
